#!/usr/bin/env bun
import { existsSync } from 'fs'
import { join } from 'path'
import { Cli } from 'wave-shell'

const devMode = existsSync(`${__dirname}/../src`)
console.log({ devMode })

const projectRoot = devMode ? join(__dirname, '..') : join(__dirname, '..', 'dist')
const cli = new Cli('Wave Cli ðŸŒŠ', projectRoot)
cli.run()