#!/usr/bin/env bun
import { existsSync } from 'fs'
import { join } from 'path'
import { Cli } from 'wave-shell'


const srcExists = existsSync(join(__dirname, '..', 'src'))

console.log({ __dirname })
console.log({ srcExists })

const projectRoot = srcExists ? join(__dirname, '..') : join(__dirname, '..', 'dist')
const cli = new Cli('Wave Cli ðŸŒŠ', projectRoot)
cli.run()